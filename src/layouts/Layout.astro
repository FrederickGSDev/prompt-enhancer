---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A tool to enhance your prompt for better productivity" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="before:block before:z-0 before:fixed before:inset-0 before:content-[''] bg-black before:bg-[url('/bg-image.webp')] before:bg-cover before:bg-no-repeat before:bg-center before:opacity-15 before:blur-2xl before:h-full before:min-h-full font-mono text-teal-200">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/*  */
	}
</style>
